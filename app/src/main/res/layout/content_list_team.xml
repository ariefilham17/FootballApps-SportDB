<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/small"
        android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small">

        <ImageView
                android:id="@id/imageview_team_list_badge"
                android:layout_width="@dimen/imageSizeBadge"
                android:layout_height="@dimen/imageSizeBadge"
                tools:src="@mipmap/ic_launcher"/>

        <TextView
                android:id="@id/textview_team_list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/favorite"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/textSizeBadge"
                android:layout_marginLeft="@dimen/small"
                android:layout_gravity="center_vertical"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
