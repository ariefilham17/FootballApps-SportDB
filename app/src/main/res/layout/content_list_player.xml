<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/small"
        android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small"
            android:gravity="center_vertical">

        <ImageView
                android:id="@id/imageview_player_list_badge"
                android:layout_width="@dimen/imageSizeBadgeGrid"
                android:layout_height="@dimen/imageSizeBadgeGrid"
                tools:src="@mipmap/ic_launcher"/>

        <TextView
                android:id="@id/textview_player_list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/favorite"
                android:textAlignment="center"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/textSizeBadgeGrid"
                android:textStyle="bold"/>

        <TextView
                android:id="@id/textview_player_list_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/favorite"
                android:textAlignment="center"
                android:textSize="@dimen/textSizeBadgeGrid"
                android:textStyle="italic"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>